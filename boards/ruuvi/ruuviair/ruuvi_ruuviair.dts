/dts-v1/;
#include <nordic/nrf52840_qfaa.dtsi>
#include <nordic/nrf52840_partition.dtsi>
#include "ruuvi_ruuviair-pinctrl.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
    model = "RuuviAir";
    compatible = "ruuvi,ruuviair-nrf52840";

    chosen {
        zephyr,console = &uart0;
        zephyr,shell-uart = &uart0;
        zephyr,uart-mcumgr = &uart0;
        zephyr,bt-mon-uart = &uart0;
        zephyr,bt-c2h-uart = &uart0;
        zephyr,ieee802154 = &ieee802154;
        nordic,pm-ext-flash = &w25q128jv;
    };

    leds {
        compatible = "gpio-leds";
        led0: led_0 {
            gpios = <&gpio1 8 GPIO_ACTIVE_LOW>;
            label = "Green LED";
        };
        led1: led_1 {
            gpios = <&gpio1 9 GPIO_ACTIVE_LOW>;
            label = "Red LED";
        };
    };

	pwmleds {
		compatible = "pwm-leds";
		pwm_led0: pwm_led_0 {
			pwms = <&pwm0 0 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
            label = "Green LED PWM";
		};
        pwm_led1: pwm_led_1 {
            pwms = <&pwm0 1 PWM_MSEC(20) PWM_POLARITY_INVERTED>;
            label = "Red LED PWM";
        };
	};

    buttons {
        compatible = "gpio-keys";
        button0: button_0 {
            gpios = <&gpio0 7 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
            label = "PinHole button";
            zephyr,code = <INPUT_KEY_0>;
        };
    };

    /* These aliases are provided for compatibility with samples */
    aliases {
        led0 = &led0;
        led-green = &led0;
        led-green-pwm = &pwm_led0;
        led1 = &led1;
        led-red = &led1;
        led-red-pwm = &pwm_led1;
        sw0 = &button0;
        bootloader-led0 = &led0;
        mcuboot-button0 = &button0;
        mcuboot-led0 = &led0;
        watchdog0 = &wdt0;
        button-pinhole = &button0;
    };
};

/delete-node/ &spi0;
/delete-node/ &spi1;
/delete-node/ &spi2;
/delete-node/ &spi3;
/delete-node/ &i2c1;
/delete-node/ &uart1;

&reg1 {
    regulator-initial-mode = <NRF5X_REG_MODE_DCDC>;
};

&pwm0 {
	status = "okay";
	pinctrl-0 = <&pwm0_default>;
	pinctrl-1 = <&pwm0_sleep>;
	pinctrl-names = "default", "sleep";
};

&adc {
    status = "okay";
};

&uicr {
    gpio-as-nreset;
};

&gpiote {
    status = "okay";
};

&gpio1 {
    status = "okay";
    gpio-line-names = "", "D0", "D1", "D2", "D3", "D4", "D5", "D6",
        "D7", "", "D8", "D9", "D10", "D11", "D12", "D13";
};

&uart0 {
    compatible = "nordic,nrf-uarte";
    status = "okay";
    current-speed = <115200>;
    pinctrl-0 = <&uart0_default>;
    pinctrl-1 = <&uart0_sleep>;
    pinctrl-names = "default", "sleep";
};

&i2c0 {
    compatible = "nordic,nrf-twi";
    status = "okay";
    pinctrl-0 = <&i2c0_default>;
    pinctrl-1 = <&i2c0_sleep>;
    pinctrl-names = "default", "sleep";
};

dmic_dev: &pdm0 {
    status = "okay";
    pinctrl-0 = <&pdm0_default>;
    pinctrl-1 = <&pdm0_sleep>;
    pinctrl-names = "default", "sleep";
    clock-source = "PCLK32M_HFXO";
};

&qspi {
    status = "okay";
    pinctrl-0 = <&qspi_default>;
    pinctrl-1 = <&qspi_sleep>;
    pinctrl-names = "default", "sleep";
    w25q128jv: w25q128jv@0 {
        compatible = "nordic,qspi-nor";
        reg = <0>;
        /* Using Quad I/O commands, as the chip supports quad operations */
        writeoc = "pp4o";
        readoc = "read4io";
        quad-enable-requirements = "S2B1v1";
        sck-frequency = <8000000>;
        jedec-id = [ef 40 18];
        /* Size is in bits. 128 Mbit equals 16 MiB */
        size = <0x08000000>;
        has-dpd;
        t-enter-dpd = <3000>;
        t-exit-dpd = <3000>;
    };
};
